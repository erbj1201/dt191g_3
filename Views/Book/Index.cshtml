@model IEnumerable<BookDirectory.Models.Book>

@{
    ViewData["Title"] = "Start";
}

<h1>Böcker</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Lägg till ny</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.Name)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">Ändra</a> |
                <a asp-action="Details" class="btn btn-secondary" asp-route-id="@item.Id">Detaljer</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Radera</a>
            </td>
        </tr>
}
    </tbody>
</table>
